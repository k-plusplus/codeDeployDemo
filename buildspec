version: 0.2

phases:
  install:
    commands:
     # Intall sqlite3 version 3.39.4
      - wget https://www.sqlite.org/2022/sqlite-autoconf-3390400.tar.gz
      - tar xvfz sqlite-autoconf-3390400.tar.gz
      - cd sqlite-autoconf-3390400
      - ./configure
      - make
      - sudo make install
      - PATH=$PATH:/usr/local/lib
      - sqlite3 --version
